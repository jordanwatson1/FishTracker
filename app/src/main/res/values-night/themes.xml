<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FishTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lblue</item>
        <item name="colorPrimaryVariant">@color/dblue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lblue</item>
        <item name="colorSecondaryVariant">@color/lblue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/darker_gray</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Button" parent="MatchWrap">
        <item name="android:layout_marginBottom">@dimen/btn_margin</item>
        <item name="android:layout_marginTop">@dimen/btn_margin</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.SignIn">
        <item name="android:text">Sign In</item>
    </style>

    <style name="Button.SignUp">
        <item name="android:text">Sign Up</item>
    </style>

    <style name="AppLogo">
        <item name="android:layout_width">@dimen/app_logo_width</item>
        <item name="android:layout_height">@dimen/app_logo_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/app_logo_margin</item>
        <item name="android:src">@android:drawable/sym_def_app_icon</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="LinearLayout" parent="MatchMatch">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/activity_padding</item>
    </style>

</resources>